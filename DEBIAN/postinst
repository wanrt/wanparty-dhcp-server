#!/bin/sh
 

set -e 
case "$1" in
    configure)
    DEPARTEMENT=$(cat /etc/departement) 
   
    echo "Config Serveur DHCP"
    systemctl stop  isc-dhcp-server 
    sed -i -e "s/INTERFACES=\"\"/INTERFACES=\"eth1\"/" /etc/default/isc-dhcp-server
    sed -i -e "s/INTERFACESv4=\"\"/INTERFACESv4=\"eth1\"/" /etc/default/isc-dhcp-server
    cp /usr/share/wanparty/etc/dhcpd.conf /etc/dhcp/dhcpd.conf
     sed -i -e "s/DEPT/$DEPARTEMENT/g" /etc/dhcp/dhcpd.conf
    systemctl start rsyslog
    systemctl start isc-dhcp-server 
  
    
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
